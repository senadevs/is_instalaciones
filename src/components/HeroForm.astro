<div class="bg-white p-6 rounded-lg shadow-lg max-w-md w-full">
  <h2 class="text-2xl font-bold mb-4" id="hero-form-title">Contáctanos</h2>
  <form 
    id="hero-form" 
    class="space-y-4 " 
    role="form" 
    aria-labelledby="hero-form-title"
  >
    <div>
      <label for="hero-nombre" class="sr-only">Nombre y apellidos</label>
      <input 
        id="hero-nombre"
        name="nombre"
        type="text" 
        placeholder="Nombre y apellidos" 
        class="w-full px-4 py-2 rounded border focus:border-primary focus:ring-1 bg-white focus:ring-primary outline-none"
        required
        aria-required="true"
      >
    </div>
    <div>
      <label for="hero-email" class="sr-only">Email</label>
      <input 
        id="hero-email"
        name="email" 
        type="email" 
        placeholder="Email" 
        class="w-full px-4 py-2 rounded border focus:border-primary bg-white dark:text-primary focus:ring-1 focus:ring-primary outline-none"
        required
        aria-required="true"
      >
    </div>
    <div>
      <label for="hero-telefono" class="sr-only">Teléfono</label>
      <input 
        id="hero-telefono"
        name="telefono"
        type="tel" 
        placeholder="Teléfono" 
        class="w-full px-4 py-2 rounded border focus:border-primary  bg-white focus:ring-1 focus:ring-primary outline-none"
      >
    </div>
    <div>
      <label for="hero-codigo-postal" class="sr-only">Código postal</label>
      <input 
        id="hero-codigo-postal"
        name="codigo_postal"
        type="text"
        pattern="[0-9]{5}"
        placeholder="Código postal" 
        class="w-full px-4 py-2 rounded border focus:border-primary bg-white  focus:ring-1 focus:ring-primary outline-none"
        required
        aria-required="true"
      >
    </div>
    <div>
      <label for="hero-mensaje" class="sr-only">Mensaje</label>
      <textarea 
        id="hero-mensaje"
        name="mensaje"
        placeholder="Mensaje" 
        rows="4" 
        class="w-full px-4 py-2 rounded border focus:border-primary bg-white  focus:ring-1 focus:ring-primary outline-none"
        required
        aria-required="true"
      ></textarea>
    </div>
    <div 
      id="hero-form-status" 
      class="hidden" 
      role="status" 
      aria-live="polite"
    >
      <p class="text-green-600 success hidden">Solicitud enviada correctamente</p>
      <p class="text-red-600 error hidden">Error al enviar la solicitud</p>
    </div>
    <button 
      type="submit" 
      class="w-full bg-primary text-white py-3 rounded font-medium hover:bg-secondary transition-colors focus:ring-2 focus:ring-offset-2 focus:ring-primary"
      aria-label="Enviar solicitud de presupuesto"
    >
      Solicitar Presupuesto
    </button>
  </form>
</div>


