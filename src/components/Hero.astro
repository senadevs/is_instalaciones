---
import HeroForm from "./HeroForm.astro";
import Image from 'astro/components/Image.astro';
const image = "https://images.unsplash.com/photo-1621905251189-08b45d6a269e";


---

<section class="relative min-h-[calc(100vh-4rem)] pt-16 flex items-center border-b border-primary/20">
  <div class="absolute inset-0 bg-black/50 z-10"></div>
 <!--  <img 
    src="https://images.unsplash.com/photo-1621905251189-08b45d6a269e"
    alt="Reformas"
    class="absolute inset-0 w-full h-full object-cover"
  /> -->
  <Image src={image.toString()} alt="IS.INSTALACIONES" class="absolute inset-0 w-full h-full object-cover" width={300} height={300} quality={100} />
  <div class="container mx-auto px-4 relative z-20">
    <div class="grid md:grid-cols-2 gap-8 items-center">
      <div class="text-white">
        <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-bold mb-4 leading-tight">
          IS INSTALACIONES - Servicios de Reformas e Instalaciones.
        </h1>
        <p class="text-lg sm:text-xl lg:text-2xl mb-8 max-w-2xl">
          Servicios de Electricidad, Fontanería, Climatización, Calefacción y Mantenimiento en
          Barcelona y alrededores.
        </p>
      </div>
      <div class="md:justify-self-end w-full md:max-w-md">
      <HeroForm />
      </div>
    </div>
  </div>
</section>
